<body>

    <!-- Content -->
    <div class="cd-hero">

        <!-- Navigation -->
        <div class="cd-slider-nav">
            <nav class="navbar">
                <div class="tm-navbar-bg">

                    <a class="navbar-brand text-uppercase" href="#"><i class="fa fa-gears tm-brand-icon"></i>Cenapyme</a>

                    <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#tmNavbar">
                        &#9776;
                    </button>
                    <div class="collapse navbar-toggleable-md text-xs-center text-uppercase tm-navbar" id="tmNavbar">
                        <ul class="nav navbar-nav">
                            <li class="nav-item active selected">
                                <div class="btn-default">@Html.ActionLink("Crear respuesta", "crear", "Respuestas")</div>
                            </li>
                            @*<li class="nav-item">
                                @Html.ActionLink("Borrar respuesta", "borrar", "Respuestas")
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Modificar respuesta", "modificar", "Respuestas")
